<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_category"
            style="@style/Font.SemiBold.14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Article Category"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/Font.Bold.20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Article Title" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/Font.Regular.12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="17 Okt 2020" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:contentDescription="Image View Content Article"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>